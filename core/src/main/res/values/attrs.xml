<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="jc_attributes">
        <attr name="jc_text" format="reference" />
        <attr name="jc_background" format="reference" />
        <attr name="jc_progress" format="boolean" />
        <attr name="jc_enabled" format="boolean" />
        <attr name="jc_primary" format="boolean" />
        <attr name="jc_secondary" format="boolean" />
        <attr name="jc_font" format="reference" />
    </declare-styleable>
    <declare-styleable name="jc_sheet_attributes">
        <attr name="jc_behavior_peekHeight" format="dimension" />
        <attr name="jc_sheet_min_height" format="dimension" />
        <attr name="jc_sheet_max_height" format="dimension" />
        <attr name="jc_with_close_icon" format="boolean" />
        <attr name="jc_with_dash_icon" format="boolean" />
        <attr name="jc_close_icon" format="reference" />
        <attr name="jc_dash_icon" format="reference" />
        <attr name="jc_with_title" format="boolean" />
        <attr name="jc_set_sheet_title" format="reference" />
        <attr name="jc_sheet_style" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="jc_input_attributes">
        <attr name="jc_input_style" format="reference" />
        <attr name="jc_input_hint_color" format="reference" />
        <attr name="jc_input_text_color" format="reference" />
        <attr name="jc_editText_theme" format="reference" />
        <attr name="jc_text_size" format="dimension" />
        <attr name="jc_text_cursor_drawable" format="reference" />
        <attr name="jc_input_hint_text" format="reference" />
        <attr name="jc_input_type" format="string" />
        <attr name="jc_end_icon_drawable" format="reference" />
        <attr name="jc_min_chars" format="integer" />
        <attr name="jc_max_chars" format="integer" />
        <attr name="jc_end_icon_mode" format="enum">
            <enum name="none" value="0" />
            <enum name="clear_text" value="1" />
            <enum name="custom" value="2" />
            <enum name="password_toggle" value="3" />
            <enum name="dropdown_menu" value="4" />
        </attr>
        <attr name="jc_end_icon_tint" format="reference" />
    </declare-styleable>
    <declare-styleable name="jc_toolbar_attr">
        <attr name="jc_toolbar_color" format="color" />
        <attr name="jc_toolbar_icon" format="reference" />
        <attr name="jc_toolbar_text" format="reference" />
    </declare-styleable>
    <declare-styleable name="jc_textview_attributes">
        <attr name="jc_textview_theme" format="reference" />
        <attr name="jc_textview_background" format="reference" />
        <attr name="jc_textview_backgroundTint" format="reference" />
        <attr name="jc_textview_drawableStart" format="reference" />
        <attr name="jc_textview_drawableEnd" format="reference" />
        <attr name="jc_textview_elevation" format="dimension" />
        <attr name="jc_textview_fontFamily" format="reference" />
        <attr name="jc_textview_maxLines" format="integer" />
        <attr name="jc_textview_rotationX" format="integer" />
        <attr name="jc_textview_rotationY" format="integer" />
        <attr name="jc_textview_shadowColor" format="reference" />
        <attr name="jc_textview_shadowDx" format="integer" />
        <attr name="jc_textview_shadowDY" format="integer" />
        <attr name="jc_textview_shadowRadius" format="integer" />
        <attr name="jc_textview_text" format="dimension" />
        <attr name="jc_textview_textColor" format="reference" />
        <attr name="jc_textview_textSize" format="dimension" />
        <attr name="jc_textview_padding" format="dimension" />
        <attr name="jc_textview_paddingStart" format="dimension" />
        <attr name="jc_textview_paddingEnd" format="dimension" />
        <attr name="jc_textview_paddingTop" format="dimension" />
        <attr name="jc_textview_paddingBottom" format="dimension" />
        <attr name="jc_textview_spannable_start" format="integer" />
        <attr name="jc_textview_spannable_end" format="integer" />
        <attr name="jc_textview_spannable_color" format="reference" />
        <attr name="jc_textview_spannable_style" format="enum" >
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
            <enum name="bold_italic" value="3"/>
        </attr>
        <attr name="jc_textview_gravity" format="enum">
            <enum name="center" value="0" />
            <enum name="start" value="1" />
            <enum name="end" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
            <enum name="center_vertical" value="5" />
            <enum name="center_horizontal" value="6" />
        </attr>
        <attr name="jc_textview_textDirection" format="enum">
            <enum name="ltr" value="0" />
            <enum name="rtl" value="1" />
        </attr>
        <attr name="jc_textview_textStyle" format="enum">
            <enum name="italic" value="0" />
            <enum name="bold" value="1" />
        </attr>
        <attr name="jc_textview_textAlignment" format="enum">
            <enum name="center" value="0" />
        </attr>
    </declare-styleable>
</resources>